    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Base style -->
    </style>

    <style name="buttonStyle" parent="AppTheme">
        <item name="android:background">#F08C35</item>
        <item name="android:layout_width">200sp</item>
